{
  "version": 2,
  "builds": [
    {
      "src": "Backend/Server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "Backend/Server.js",
      "methods": ["GET"]
    },
    {
      "src": "/api/(.*)",
      "dest": "Backend/Server.js",
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"]
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "build/index.html"
    }
  ]
} 